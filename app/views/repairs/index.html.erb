<h1>Listing repairs</h1>

<table>
  <tr>
    <th>Garage</th>
    <th>Details of service</th>
    <th>Vehicle number</th>
    <th>Invoice number</th>
    <th>Amount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @repairs.each do |repair| %>
  <tr>
    <td><%= repair.garage %></td>
    <td><%= repair.details_of_service %></td>
    <td><%= repair.vehicle_number %></td>
    <td><%= repair.invoice_number %></td>
    <td><%= repair.amount %></td>
    <td><%= link_to 'Show', repair %></td>
    <td><%= link_to 'Edit', edit_repair_path(repair) %></td>
    <td><%= link_to 'Destroy', repair, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

